{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Simple API",
    "description": "A simple API to learn how to write OpenAPI Specification"
  },
  "schemes": ["http"],
  "host": "e-wally.com:5202",
  "basePath": "/",
  "paths": {
    "/contact": {
      "post": {
        "summary": "Formulaire de contact",
        "description": "Formulaire présent sur le site e-wally",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nom de l'expéditeur",
            "type": "string"
          },
          {
            "name": "subname",
            "in": "query",
            "description": "Prénom de l'expéditeur",
            "type": "string"
          },
          {
            "name": "objet",
            "in": "query",
            "description": "Objet de la demande",
            "type": "string"
          },
          {
            "name": "content",
            "in": "query",
            "description": "Contenue de la demande",
            "type": "string"
          },
          {
            "name": "email",
            "in": "query",
            "description": "Email de l'expéditeur",
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Formulaire transmis au back-end"
          }
        }
      }
    },
    "/contact/contacts": {
      "get": {
        "summary": "Liste des demande de contact",
        "description": "Retourne une liste des demande de contact.",
        "responses": {
          "200": {
            "description": "La liste des demandes.",
            "schema": {
              "type": "array",
              "items": {
                "required": ["username"],
                "properties": {
                  "_id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "subname": {
                    "type": "string"
                  },
                  "objet": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "__v": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contact/contacts/{id}": {
      "delete": {
        "summary": "Suppression d'une demande de contact",
        "description": "Permet de supprimer une demande de contact en transmettant un ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id de la demande de contact",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Demande supprimé!"
          }
        }
      }
    }
  }
}
